<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec"
    tools:context=".RegActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_marginLeft="190dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="50dp"
                android:clickable="true"
                android:id="@+id/register_goLogButton_ID"
                card_view:cardUseCompatPadding="true"
                android:layout_width="180dp"
                android:layout_height="90dp"
                card_view:cardCornerRadius="30dp"
                card_view:cardElevation="5dp"
                card_view:cardBackgroundColor="@android:color/white">
                <TextView
                    android:fontFamily="@font/young"
                    android:textColor="#31d37c"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:paddingRight="30dp"
                    android:gravity="center"
                    android:text="Login"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:rotation="90"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-50dp"
            android:background="@drawable/circle_1_orange"
            android:layout_width="180dp"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:rotation="210"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle_1_orange"
            android:layout_width="180dp"
            android:layout_height="match_parent">
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="340dp">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/porfont"
                android:textAllCaps="false"
                android:text="Register"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#C9000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:fontFamily="@font/young"
                    android:textColor="#E6000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:drawablePadding="10dp"
                    android:hint="Full Name"
                    android:paddingLeft="15dp"
                    android:drawableLeft="@drawable/ic_name"
                    android:background="@drawable/edittext_1"
                    android:layout_width="320dp"
                    android:layout_height="60dp"/>
                <EditText
                    android:fontFamily="@font/young"
                    android:textColor="#E6000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:drawablePadding="10dp"
                    android:hint="Address"
                    android:paddingLeft="15dp"
                    android:drawableLeft="@drawable/ic_location"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/edittext_3"
                    android:layout_width="320dp"
                    android:layout_height="60dp"/>
                <EditText
                    android:fontFamily="@font/young"
                    android:textColor="#E6000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:paddingLeft="15dp"
                    android:drawableLeft="@drawable/ic_mail"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/edittext_3"
                    android:layout_width="320dp"
                    android:layout_height="60dp"/>
                <EditText
                    android:fontFamily="@font/young"
                    android:inputType="textPassword"
                    android:textColor="#E6000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:paddingLeft="15dp"
                    android:drawableLeft="@drawable/ic_password"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/edittext_2"
                    android:layout_width="320dp"
                    android:layout_height="60dp"/>
                <ImageView
                    android:id="@+id/register_submitButton_ID"
                    android:padding="10dp"
                    android:background="@drawable/circle_1_orange"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="287dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_ok"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_marginLeft="240dp"
            android:layout_marginBottom="-20dp"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="15dp"
            android:rotation="90"
            android:background="@drawable/circle_1_orange"
            android:layout_width="180dp"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="-70dp"
            android:layout_marginTop="65dp"
            android:rotation="90"
            android:background="@drawable/circle_1_orange"
            android:layout_width="180dp"
            android:layout_height="match_parent">
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>